<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alramlawi.schoolapp.Student_result">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULT!"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:id="@+id/resheadingtxt"
        />
    <LinearLayout
        android:id="@+id/linearlt1"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/resheadingtxt"
        >
    <TextView
        android:id="@+id/sub1txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject 1"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textSize="18dp"

        />
    <TextView
        android:id="@+id/sub1score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="78/100"
        android:textSize="18dp"
        android:layout_marginStart="50dp"

        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt1"

        >
        <TextView
            android:id="@+id/sub2txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 2"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18dp"

            />
        <TextView
            android:id="@+id/sub2score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78/100"
            android:textSize="18dp"
            android:layout_marginStart="50dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt3"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt2"

        >
        <TextView
            android:id="@+id/sub3txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 3"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18dp"

            />
        <TextView
            android:id="@+id/sub3score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78/100"
            android:textSize="18dp"
            android:layout_marginStart="50dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt4"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt3"

        >
        <TextView
            android:id="@+id/sub4txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 4"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            />
        <TextView
            android:id="@+id/sub4score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78/100"
            android:textSize="18dp"
            android:layout_marginStart="50dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt5"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt4"

        >
        <TextView
            android:id="@+id/sub5txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 5"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            />
        <TextView
            android:id="@+id/sub5score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78/100"
            android:textSize="18dp"
            android:layout_marginStart="50dp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearltsum"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt5"

        >
        <TextView
            android:id="@+id/sumtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Score"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            />
        <TextView
            android:id="@+id/sumscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="390/500"
            android:textSize="18dp"
            android:layout_marginStart="50dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearltpercent"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearltsum"

        >
        <TextView
            android:id="@+id/subperctxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Percentage"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            />
        <TextView
            android:id="@+id/subpercscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78.0%"
            android:textSize="18dp"
            android:layout_marginStart="50dp"

            />

    </LinearLayout>



</RelativeLayout>

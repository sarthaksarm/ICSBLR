<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.alramlawi.schoolapp.Student_result">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFC400"
        android:text="RESULT!"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:id="@+id/resheadingtxt"
        />
    <LinearLayout
        android:id="@+id/linearlt1"
        android:layout_marginTop="70dp"
        android:textColor="#fff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="0.5"
        android:gravity="center"
        android:layout_below="@+id/resheadingtxt"
        >
    <TextView
        android:id="@+id/sub1txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:textColor="#FFC400"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textSize="18dp"

        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt2"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt1"
        android:weightSum="0.5"

        >
        <TextView
            android:id="@+id/sub2txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kannada"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18dp"
            android:textColor="#FFC400"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt3"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt2"
        android:weightSum="0.5"

        >
        <TextView
            android:id="@+id/sub3txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maths"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18dp"
            android:textColor="#FFC400"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt4"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt3"
        android:weightSum="0.5"

        >
        <TextView
            android:id="@+id/sub4txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#FFC400"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt5"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt4"
        android:weightSum="0.5"

        >
        <TextView
            android:id="@+id/sub5txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social Science"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#FFC400"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearltsum"
        android:layout_marginTop="80dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt5"
        android:weightSum="0.5"

        >
        <TextView
            android:id="@+id/sumtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Score"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#FF9100"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearltpercent"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearltsum"
        android:weightSum="0.5"

        >
        <TextView
            android:id="@+id/subperctxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Percentage"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#FF9100"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearlt10"
        android:layout_marginTop="70dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/linearlt1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="0.5"
        android:gravity="center"
        android:layout_below="@+id/resheadingtxt"
        >

        <TextView
            android:id="@+id/sub10score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78/100"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt20"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="0.5"
        android:layout_toEndOf="@+id/linearlt2"
        android:layout_below="@+id/linearlt10"

        >

        <TextView
            android:id="@+id/sub20score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78/100"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            android:textColor="#fff"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt30"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_toEndOf="@id/linearlt3"
        android:layout_below="@+id/linearlt20"
        android:weightSum="0.5"

        >

        <TextView
            android:id="@+id/sub30score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78/100"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            android:textColor="#fff"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt40"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt30"
        android:weightSum="0.5"
    android:layout_toEndOf="@+id/linearlt4"
        >

        <TextView
            android:id="@+id/sub40score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78/100"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            android:textColor="#fff"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt50"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt40"
        android:weightSum="0.5"
        android:layout_toEndOf="@+id/linearlt5"
        >
        <TextView
            android:id="@+id/sub50score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78/100"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            android:textColor="#fff"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearltsum10"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt50"
        android:weightSum="0.5"
        android:layout_toEndOf="@+id/linearltsum"
        >
        <TextView
            android:id="@+id/sumscore10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="390/500"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            android:textColor="#fff"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearltpercent10"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearltsum"
        android:weightSum="0.5"
        android:layout_toEndOf="@+id/linearltpercent"
        >
        <TextView
            android:id="@+id/subpercscore10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78.0%"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            android:textColor="#fff"

            />

    </LinearLayout>








</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="#FFFFFF"
        android:layout_margin="30dp">
        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="#E8E8E8"
            app:fillColor="#fff"
            android:layout_marginTop="9dp"
            app:indicatorVisibility="invisible"
            app:pageColor="#fff"
            app:radius="0dp"
            app:slideInterval="2000"
            app:snap="false" />


        <TextView
            android:id="@+id/requst_state_indicat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_marginVertical="20dp"
            android:text="Your latest request not approved yet !!!"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@color/colorOrange"/>

        <EditText
            android:id="@+id/leaving_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint= "write leaving reason here !!"
            android:gravity="center"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="20dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/edit_stdName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:hint="Student ID"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:id="@+id/send_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorPrimaryDark"
            android:text="Send Request"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alramlawi.schoolapp.MessageActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/xmessage"
        android:layout_margin="34dp"
        android:hint="TYPE YOUR MESSAGE HERE"></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/number"
        android:layout_margin="34dp"
        android:hint="TYPE MOBILE NUMBER"></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_margin="43dp"
        android:id="@+id/sendbutton"
        android:background="#00B0FF"
        android:text="Send Message"></Button>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alramlawi.schoolapp.teacher.Marksact"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Marks!"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:id="@+id/resheadingtxt"
        />

    <LinearLayout
        android:id="@+id/linearltid"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/resheadingtxt"
        >
        <TextView
            android:id="@+id/idtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stuent ID"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idedit"
            android:text="1"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            >

        </EditText>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlt1"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearltid"
        >
        <TextView
            android:id="@+id/sub1txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 1"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub1scoreedit"
            android:text="78"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            >

        </TextView>

        <EditText
            android:id="@+id/sub1totaledit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            >

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt1"
        >
        <TextView
            android:id="@+id/sub2txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 2"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18dp"

            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub2scoreedit"
            android:text="78"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            >

        </TextView>

        <EditText
            android:id="@+id/sub2totaledit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            >

        </EditText>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt3"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt2"

        >
        <TextView
            android:id="@+id/sub3txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 3"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18dp"

            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub3scoreedit"
            android:text="78"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            >

        </TextView>

        <EditText
            android:id="@+id/sub3totaledit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            >

        </EditText>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt4"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt3"

        >
        <TextView
            android:id="@+id/sub4txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 4"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub4scoreedit"
            android:text="78"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            >

        </TextView>

        <EditText
            android:id="@+id/sub4totaledit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            >

        </EditText>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlt5"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linearlt4"

        >
        <TextView
            android:id="@+id/sub5txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 5"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub5scoreedit"
            android:text="78"
            android:textSize="18dp"
            android:layout_marginStart="50dp"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            >

        </TextView>

        <EditText
            android:id="@+id/sub5totaledit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            >

        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/add_marksbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlt5"
        android:layout_gravity="center"
        android:text="SUBMIT MARKS"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="45dp"
        android:textColor="#FFFFFF"
        android:background="@color/colorOrange"/>

</RelativeLayout>

</ScrollView>